<?xml version="1.0" encoding="utf-8" ?>
<local:ModelPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Bravson.Socialalert.Portable"
             x:Class="Bravson.Socialalert.Portable.PictureGridPage">

  <ContentPage.ToolbarItems>
    <ToolbarItem Name="Search" Order="Primary" Icon="search_header_icon.png"/>
  </ContentPage.ToolbarItems>

  <ListView x:Name="listView" IsPullToRefreshEnabled="true" RefreshCommand="{Binding Refresh}" ItemsSource="{Binding ItemList}" RowHeight="200" >
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <Grid BackgroundColor="White" Padding="5">
            <Image Source="{Binding ImageSource}" Aspect="AspectFill"/>
          </Grid>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</local:ModelPage>