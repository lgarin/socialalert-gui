<?xml version="1.0" encoding="utf-8" ?>
<local:ModelPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Bravson.Socialalert.Portable"
             x:Class="Bravson.Socialalert.Portable.PictureMetadataPage">
  <StackLayout>
    <Entry Text="{Binding MediaTitle}" Placeholder="Title" HorizontalOptions="FillAndExpand"/>
    <Editor Text="{Binding MediaDescription}" HorizontalOptions="FillAndExpand" HeightRequest="40" />
    <Image Source="{Binding MediaSource}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Aspect="AspectFill"/>
    <Button Command="{Binding SaveCommand}" Text="Save" HorizontalOptions="Center" />
  </StackLayout>
</local:ModelPage>